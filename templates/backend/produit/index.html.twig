               
{% extends '/backend/dashbase.html.twig' %}

{% block title %}Produit index{% endblock %}

{% block body %}
      <div class="section-body">
                    <h2 class="section-title">Liste des produits</h2>
                    <p class="section-lead">We use 'Bootstrap' made by @SpryMedia. You can check the full documentation <a href="https://getbootstrap.com/docs/4.3/content/tables/">here</a>.</p>

                    <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-header">
                                <button class='btn  btn-primary'>  <a class='text-white text-decoration-none' href="{{ path('app_produit_new') }}">Create new</a></button>
                                </div>
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table">
                                            <thead>
                                              <tr>
                                                <th>Id</th>
                                                <th>Produit</th>
                                                <th>Description</th>
                                                <th>Prix</th> 
                                                <th>Categorie</th>
                                                <th>Image</th>
                                                <th></th>
                                               </tr>
                                            </thead>
                                            <tbody>
                                               {% for produit in produits %}
                                                    <tr>
                                                        <td>{{ produit.id }}</td>
                                                        <td>{{ produit.NomPro }}</td>
                                                        <td>{{ produit.DesPro }}</td>
                                                        <td>{{ produit.PrixPro }}</td>
                                                         <td>{{ produit.categorie.NomCat }}</td>
                                                         <td><img style=" white:60px; height:60px" class="img-fluid rounded-circle mr-1" src=" {{asset('uploads/image/')}}{{ produit.ImgPro }}"></td>
                                                        <td>
                                                            <div class="dropdown d-inline mr-2">
                                                                <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                                    Action
                                                                </button>
                                                                <div class="dropdown-menu">
                                                                    <a class="dropdown-item" href="{{ path('app_produit_show', {'slug': produit.Slug}) }}">Voir</a>
                                                                    <a class="dropdown-item" href="{{ path('app_produit_edit', {'slug': produit.Slug}) }}">Modifier</a>
                                                                </div>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                {% else %}
                                                    <tr>
                                                        <td colspan="8">no records found</td>
                                                    </tr>
                                                {% endfor %}
                                            </tbody>
                                          </table>
                                        
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                </div>

 

    
{% endblock %}
